class Calculator:
    def __init__(self,n):
        self.n = n
    
    def square(self):
        print(f"the square of a number is {self.n*self.n}")
    
    def cube(self):
        print(f"the square of a number is {self.n*self.n*self.n}")
    
    def cuberoot(self):
        print(f"the square of a number is {self.n**1/2}")
        
a = Calculator(4)
a.square()
a.cube()
a.cuberoot()
